<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:orientation="vertical">

    <Button android:id="@+id/buttonPlus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:textSize="@dimen/variables_num_keyboard"
            android:layout_marginHorizontal="@dimen/button_space_between"
    />


    <Button android:id="@+id/buttonMinus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="@dimen/variables_num_keyboard"
            android:layout_marginHorizontal="@dimen/button_space_between"
    />


    <Button android:id="@+id/buttonMultiply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="*"
            android:textSize="@dimen/variables_num_keyboard"
            android:layout_marginHorizontal="@dimen/button_space_between"
    />

    <Button android:id="@+id/buttonDivide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="/"
            android:textSize="@dimen/variables_num_keyboard"
            android:layout_marginHorizontal="@dimen/button_space_between"
    />


</LinearLayout>